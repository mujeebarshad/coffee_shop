<div class='container'>
  <h2>New Item</h2>
  <%= form_for :item, url: items_path, method: :post do |f| %>
    
    <div class="field form-group">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
    </div>

    <div class="field form-group">
      <%= f.label :item_type %><br />
      <%= f.select :item_type, Item::ITEM_TYPES.map{ |key, value| [value, key] }, {}, { class: ' form-control' } %>
    </div>

    <div class="field form-group">
      <%= f.label :price %><br />
      <%= f.number_field :price, min: 0, autofocus: true, class: 'form-control' %>
    </div>

    <div class="field form-group">
      <%= f.label 'Discount (%)' %><br />
      <%= f.number_field :discount, min: 0, autofocus: true, autocomplete: "discount", class: 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit "Add Item", class: 'btn btn-primary mb-2' %>
    </div>
  <% end %>

</div>
